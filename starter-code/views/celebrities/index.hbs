<div id="celeb-index">
    <h1>{{title}}</h1>
    <a href="/celebrities/new">Add new celebrity</a>
    {{#each celebrities}}
    <h3><a href="/celebrities/{{_id}}">{{name}}</a></h3>
    <button><a href="/celebrities/{{_id}}/edit">Edit</a></button>
    <form action="/celebrities/{{_id}}/delete" method="POST">
        <button type="submit">Delete</button>
    </form>
    {{/each}}
</div>