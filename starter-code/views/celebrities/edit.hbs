<div id="celeb-edit">
    <h1>{{title}}</h1>
    <br>
    <form action="/celebrities/{{celebrity._id}}" method="POST">
        <label>Celebrity:
        </label>
        <input type="text" name="name" value="{{celebrity.name}}">
        <br>
        <label>Occupation:
        </label>
        <input type="text" name="occupation" value="{{celebrity.occupation}}">
        <br>
        <label>Catch Phrase:
        </label>
        <input type="text" name="catchPhrase" value="{{celebrity.catchPhrase}}">
        <br>
        <button type="submit">Save</button>
    </form>
</div>