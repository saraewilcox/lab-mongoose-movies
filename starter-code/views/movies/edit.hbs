<div id="movie-edit">
    <h1>{{title}}</h1>
    <br>
    <form action="/movies/{{movie._id}}" method="POST">
        <label>Movie:
        </label>
        <input type="text" name="title" value="{{movie.title}}">
        <br>
        <label>Genre:
        </label>
        <input type="text" name="genre" value="{{movie.genre}}">
        <br>
        <label>
            Plot
            <textarea name="plot" cols="35" rows="5" placeholder="Text enter here">{{movie.plot}}</textarea>
        </label>
        <br>
        <button type="submit">Save</button>
    </form>
</div>